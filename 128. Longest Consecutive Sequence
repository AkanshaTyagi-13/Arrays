class Solution {
    public int longestConsecutive(int[] nums) {
        int n=nums.length;
        if(n==0) return 0;
        HashSet<Integer> set=new HashSet<>();
        for(int i=0;i<n;i++){
            set.add(nums[i]);
        }
        int longest=1;
        for(int num:set){
            int curr=num,cnt=1;
            if(!set.contains(num-1)){
                while(set.contains(curr+1)){
                    cnt++;
                    longest=Math.max(cnt,longest);
                    curr=curr+1;
                }
            }
            
        }
        return longest;
    }
}
