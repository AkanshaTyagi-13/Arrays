class Solution {
    public void setZeroes(int[][] matrix) {
        int col=1;
        for(int i=0;i<matrix.length;i++){
            for(int j=0;j<matrix[i].length;j++){
                if(matrix[i][j]==0){
                    matrix[i][0]=0;
                    if(j==0) col=0;
                    else matrix[0][j]=0;
                }
            }
        }
        //changing inner matrix
        for(int i=1;i<matrix.length;i++){
            for(int j=1;j<matrix[i].length;j++){
                if(matrix[0][j]==0||matrix[i][0]==0) matrix[i][j]=0;
            }
        }
        //changing 1st row
        for(int i=matrix[0].length-1;i>0;i--){
            if(matrix[0][0]==0||matrix[0][i]==0) matrix[0][i]=0;
        }
        //changing 1st column
        for(int i=matrix.length-1;i>0;i--){
            if(matrix[i][0]==0||col==0) matrix[i][0]=0;
        }
        //changing matrix[0][0]
        if(col==0||matrix[0][0]==0) matrix[0][0]=0;
    }
}
